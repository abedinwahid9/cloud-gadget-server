

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  productId String
  name String
  description String
  images String[]
  category String
  sub_category String 
  price Float
  discount Float
  stock_quantity Int
  status Boolean
  variants Json[] 
  reviews Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Counter {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  seq  Int
}


